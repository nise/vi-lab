function escapeSpecialChars(s) { 
    return encodeURIComponent(s);
    return s.replace(/\n/g, "\\n")
               .replace(/\'/g, "\\'")
               .replace(/\"/g, '\\"')
               .replace(/\&/g, "\\&")
               .replace(/\r/g, "\\r")
               .replace(/\t/g, "\\t")
               .replace(/\b/g, "")
               .replace(/\f/g, "\\f");
};

