<% layout( '../admin-layout' ) -%>


<div class="col-md-10">
    <h2>Edit page</h2>
    <div class="edit-form">
        <form action="/admin/pages/update/<%= items._id %>" method="post" accept-charset="utf-8">
            <div class="input-group input-group-xs">
                <span class="input-group-addon" id="sizing-addon1">Page title</span>
                <input type="text" class="form-control" placeholder="Page title" aria-describedby="sizing-addon1" name="title" value="<%= items.title %>">
            </div>
            <br>
            <div class="input-group input-group-xs">
                <span class="input-group-addon" id="sizing-addon1">Path</span>
                <input type="text" class="form-control" placeholder="Path" aria-describedby="sizing-addon1" name="root" value="<%= items.root %>">
            </div>
            <br>

            <div class="input-group input-group-xs">
                <span class="input-group-addon" id="sizing-addon1">Editor</span>
                <textarea class="form-control" id="md-editor-textarea" name="content" cols="120" rows="10"><%= items.content %></textarea>
            </div>
            <br>


            <div class="buttons">
                <button type="submit" class="btn-primary btn">save</button>  <a href="/admin/pages">cancel</a>
            </div>
        </form>
    </div>
</div>


