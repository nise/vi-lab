<% layout( 'layout' ) -%>

<div class="jumbotron">
	
</div> 

<div class="container">
	<% phase_i = 0 %>
	<% items.script.phases.forEach(function(phase){ %>
		<% if( phase_i <= items.script.current_phase ) {%> 
	<div class="row">
		<div class="col-md-10 phase">
			<h2 class="str"><%= phase.title %></h2>
			<b>Aufgabe:</b>
			<div class="mark str"><%= phase.instruction %></div>
			<!--<h3>Materialien:</h3>
			<div class="mark str"><%= phase.supplements %></div>-->
			<br/>
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 phase">
			<b>Video(s):</b><br/><br/>
			
			<% phase.fuck.forEach(function(item){ %>
			<div class="col-xs-6 col-md-3">
				<div class="thumbnail">
					<a class="thumbnail fadein" href="/videos/view/<%= item._id %>">
							<img width="100%" height="100%" src="/static/img/stills/<%= item.metadata[0].thumbnail[1] %>" />
					</a>
					<div class="caption">
				    <h5><a class="thumbnail fadein" href="/videos/view/<%= item._id %>"><%= item.metadata[0].title %></a></h5>
				    <p class="lecturer"><a href="<%= item.metadata[0].source %>"><span class="glyphicon glyphicon-user"></span> <b></b> <%= item.metadata[0].author %></a></p>
						<p><%= item.metadata[0].abstract %></p>
						<!--<p><span class="glyphicon glyphicon-globe"> <b>Quelle</b></span></p>	-->
				   </div> 
					</div>
			</div>
			<% }); %>
		</div>	
	</div>
		<% } %>	
		<% phase_i++ %>
	<% }); %>
	
</div>

<script>

$('.str').each(function(i, val){
	$(this).text( decodeURIComponent($(this).text()) );
});

</script>
